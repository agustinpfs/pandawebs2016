.Header
	background-color black
	color: white 
	display: flex 
	justify-content: space-between
	align-items: center
	&-logo
		padding: .5rem
		h1 
			display: inline-block
			margin-right .5rem
		span
			display: block
	&-menu
		width: 40vw
		ul 
			display: flex 
			justify-content: space-between
			margin-right .5rem
		
@media (max-width:800px)
	.Header
		&-menu
			display: none		

	