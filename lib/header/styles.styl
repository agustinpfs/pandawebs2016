@media (max-width:800px)
	.Header
		label
			display block		
		ul
			flex-direction column
			li 
				margin-bottom 1rem
		nav
			position fixed
			right -100%
			top 65px
			transition .5s
			background-color black
			width 100%
			text-align center	


	