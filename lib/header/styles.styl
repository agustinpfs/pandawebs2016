	// 	right -100%
	// 	top 65px
	// 	transition .5s
	// 	background-color #035103
	// 	width 100%
	// 	text-align center
	&-menu
		margin auto 0
		.check
			display none
			&:checked~				
				nav
					position absolute
					right 0%
				    transition .5s	
				    width 100%
				    z-index 30
		ul 
			display flex
		li 
			margin-right .5rem
			a 
				color white
				text-decoration: none
			a:hover 
				border-bottom 1px solid blue
		label
			display none
			.icon-menu 
				font-size 2rem
				color white
				cursor pointer
				margin-right .5rem
