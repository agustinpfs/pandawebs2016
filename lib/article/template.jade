mixin article(art)

	.Article
		.Article-shot
			a(href=art.link, target="blank")
				figure
					img(src=art.image)
				.Article-shot_footer
					span=art.title
				.Article-shot_opacity
					span VISITAR
		.Article-description
			h2=art.title
			p=art.description
			h3 Tecnologías
			ul
				li=art.tech1
				li=art.tech2
				li=art.tech3
				li=art.tech4
				li=art.tech5
				li=art.tech6
				li=art.tech7
				li=art.tech8
				li=art.tech9
				li=art.tech10
			button
				a(href=art.link, target="blank")=art.demo
			button=art.gitsi
				a(href=art.git, target="blank")=art.code
					
		
			

