.Layout
	width 100vw
	overflow: hidden
	.description 
		margin-left 135px
		text-transform: uppercase
		
			
	// position relative
	&-title		
		height: 95vh
		display: flex
	&-navTop
		position: absolute
		right 1rem
		top 1rem
	&-services
	&-contact
	&-techno
		position: absolute
		width: 33.33vw
		bottom 1rem	
		// overflow: hidden	
		// text-align: center
	&-techno		
		z-index: 2
	&-contact
		width: 100vw
	&-techno_content
	&-services_content
	&-contact_content
		position: absolute
		top -75vh
		left 1vw
		z-index: 5
		max-height: 65vh
		overflow scroll
		padding 2rem
		width 28vw
		border-left 1px solid black
		display: none
		// background-color alpha(black, .1)
		li 
			font-size: 1.3rem
			margin-bottom 1rem
			
	&-services_content
		left 64vw
		border-right 1px solid black
		border-left 0px solid black
		width 30vw
		text-align: right
	&-techno_content
		width 20vw

	&-h1
		font-size: 3em
		margin auto
		padding-bottom 2em
		text-transform: uppercase
	&-footer
		width: 100%
		background-color black
		overflow: hidden
		

